<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_viaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.itesm.projectprotravel.EditViaje">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nombre del viaje"
        android:ems="10"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/viajeName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Destino"
        android:ems="10"
        android:layout_below="@+id/viajeName"
        android:layout_alignStart="@+id/viajeName"
        android:layout_marginTop="33dp"
        android:id="@+id/viajeDestino" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Punto de partida"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/viajeDestino"
        android:id="@+id/viajePartida" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Tiempo de viaje"
        android:ems="10"
        android:layout_below="@+id/viajePartida"
        android:layout_alignStart="@+id/viajePartida"
        android:layout_marginTop="38dp"
        android:id="@+id/viajeTiempo" />

    <Button
        android:text="Save changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viajeTiempo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/saveTrip"
        android:onClick="saveChangesViaje"/>
</RelativeLayout>
