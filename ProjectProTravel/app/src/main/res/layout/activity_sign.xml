<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.itesm.projectprotravel.SignActivity">

    <TextView
        android:text="Es hora de irse, ¿Qué estás haciendo?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="100dp"
            android:layout_marginTop="54dp"
            android:id="@+id/button13"
            android:background="@drawable/buy"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button15"
            android:onClick="sendCheck"/>

        <Button
            android:layout_height="150dp"
            android:id="@+id/button14"
            android:layout_width="100dp"
            android:background="@drawable/toilet"
            android:layout_alignTop="@+id/button13"
            android:layout_alignParentEnd="true"
            android:onClick="sendCheck"/>

        <Button
            android:layout_height="200dp"
            android:id="@+id/button15"
            android:layout_marginBottom="30dp"
            android:background="@drawable/check1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="175dp"
            android:onClick="sendCheck"/>


    </RelativeLayout>

</RelativeLayout>
